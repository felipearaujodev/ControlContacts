@model UserModel
@{
    ViewData["Title"] = "Confirmação de exclusão";
}

<div class="text-center">
    <h3>Confirmar exclusão do usuário (@Model.Name)?</h3>
</div>
<div class="row g-2">
    <a class="btn btn-primary btn-block" role="button" asp-controller="User" asp-action="Index">Cancelar Exclusão</a>
    <a class="btn btn-danger btn-block" role="button" asp-route-id="@Model.Id" asp-controller="User" asp-action="Delete">Confirma Exclusão</a>
</div>

